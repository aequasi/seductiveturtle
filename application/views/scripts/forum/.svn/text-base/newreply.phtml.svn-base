<?php 
$_f = $this->form;
?>
<div class="page-head">
    <h3><?php echo str_replace("_"," ",$_f->getName()); ?></h3>
</div>
<br/>
<style>
.hidden { display:none; }
</style>
<div class="negMargin">
        <form action="<?php echo $_f->getAction(); ?>"
                method="<?php echo $_f->getMethod(); ?>">
                <?php
                $groups = $_f->getDisplayGroups();
                foreach($groups as $group) {
                ?>
                    <div class="fieldset_bg_head">
                    </div>
                    <div class="fieldset_bg_body">
                        <fieldset class="fields regField">
                            <legend>
                                                <?php echo $group->getLegend(); ?>
                            </legend>
                                        <div class="clear"></div>
                                        <?php
                                        $elements = $group->getElements();
                                        foreach($elements as $element) { 
                                        		if($element->helper == 'formHidden') {
                                        			echo '<div class="hidden">'.$element->render()."</div>\n";
                                        		}
                                        		else {
                                        			echo '<div>'.$element->render()."</div>\n";
                                        		}
                                        }
                                        ?>
                        </fieldset>
                    </div>
                    <div class="fieldset_bg_foot">
                    </div>
            <br/>
</form>
<?php } ?>