<?php
$_f = $this->pageForm;
?>
<div id='comment_form_wrap'>
	<form action="<?php echo $_f->getAction(); ?>"
                method="<?php echo $_f->getMethod(); ?>"
                id="form-validate"
        >
                <?php
                $groups = $_f->getDisplayGroups();
                foreach($groups as $group) {
                ?>
                        <fieldset class="<?php echo $group->getAttrib('class'); ?>">
                        	
                           		<legend>
                                	<a href='#' onclick='$j("div[section=\"<?=$group->getAttrib("id");?>\"]").toggle("slow")'><h3><?php echo ucwords($group->getLegend()); ?></h3></a>
                            	</legend>
                            
                                <div section="<?=$group->getAttrib('id');?>" style='display:none;'>
